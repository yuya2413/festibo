 <div class='nested-fields'>
    <%= f.label :name, "部屋タイプ" %>
    <%= f.text_field :name, placeholder: "例:シングル2台" %>
    <%= f.label :people_count, "人数" %>
    <%= f.number_field :people_count %>
    <%= f.label :charge, "一泊料金" %>
    <%= f.number_field :charge, placeholder: "¥" %>

    <!---以下、部屋数-->
    <div>
    <%= f.fields_for :rooms do |room| %>
        <%= render 'room_fields', :f => room %>
    <% end %>
      <div class="links">
        <%= link_to_add_association '部屋を追加', f, :rooms, class:"btn btn-info"%>
      </div>
    </div>
    <!---以上、部屋数-->

    <%= link_to_remove_association "部屋タイプを削除", f, class:"btn btn-danger" %>
</div>