<h1>マイページ</h1>
<p>Find me in app/views/users/users/show.html.erb</p>

"姓"<%= @user.last_name %>
"名"<%= @user.first_name %>
"メアド"<%= @user.email %>

<%= link_to "退会", users_user_quit_path(@user), method: :patch, data: {confirm: "本当に退会しますか？"} %>



<table class="table table-hover">
	<thead>
		<tr>
            <th>予約ID</th>
            <th>祭り名</th>
			<th>ホテル名</th>
			<th>チェックイン</th>
			<th>チェックアウト</th>
			<th>ホテル住所</th>
		</tr>
	</thead>
	<tbody>
		<% @user.reservations.each do |reservation| %>
        <tr>
			<td><%= link_to reservation.id, users_user_reservation_complete_path(@user, reservation) %></td>
			<td><%= reservation.festival.name %></td>
			<td><%= reservation.room.room_type.hotel.name %></td>
			<td><%= reservation.start_date %></td>
			<td><%= reservation.end_date %></td>
			<td><%= reservation.room.room_type.hotel.address %></td>
		</tr>
		<% end %>

	</tbody>
</table>
